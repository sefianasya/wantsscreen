<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_beauty"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/beauty" />

        <TextView
            android:id="@+id/tvBeauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Beauty"
            app:layout_constraintStart_toEndOf="@+id/img_beauty"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDateBeauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/01/14"
            android:textColor="#97999E"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tvBeauty"
            app:layout_constraintTop_toBottomOf="@+id/tvBeauty" />

        <TextView
            android:id="@+id/tvAmountBeauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="IDR 50.000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>